{
  "name": "hcgg",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "dev": "node server.js",
    "format": "yarn prettier --write",
    "lint": "eslint --ignore-path=.gitignore .",
    "lint:fix": "eslint --ignore-path=.gitignore . --fix",
    "postinstall": "if-env NODE_ENV=production && next build || :",
    "prettier": "prettier 'pages/**/*.js' 'components/**/*.js' 'server/**/*.js'",
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "start:dev": "yarn && node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js"
  },
  "author": "Hamilton Chapman",
  "license": "ISC",
  "dependencies": {
    "babel-eslint": "^8.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^3.0.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "5",
    "eslint-plugin-react": "^7.3.0",
    "express": "^4.16.0",
    "glamor": "^2.20.40",
    "glamorous": "^4.9.7",
    "highlight.js": "^9.12.0",
    "if-env": "^1.0.0",
    "next": "^4.1.4",
    "polished": "^1.7.0",
    "prettier": "^1.7.0",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-syntax-highlighter": "^5.7.0",
    "styled-system": "^1.0.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "rules": {
      "max-len": 0,
      "arrow-body-style": 0,
      "arrow-parens": [
        2,
        "as-needed"
      ],
      "comma-dangle": [
        2,
        "only-multiline"
      ],
      "consistent-return": 0,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": [
        2,
        {
          "devDependencies": true
        }
      ],
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "react",
            "styled-components"
          ]
        }
      ],
      "jsx-a11y/no-static-element-interactions": 0,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "no-confusing-arrow": 0,
      "no-mixed-operators": [
        1,
        {
          "allowSamePrecedence": true
        }
      ],
      "no-return-assign": 0,
      "no-unused-expressions": 0,
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "react/jsx-wrap-multilines": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            "js"
          ]
        }
      ],
      "react/no-array-index-key": 1,
      "react/no-did-mount-set-state": 0,
      "space-before-function-paren": [
        2,
        "never"
      ],
      "react/no-unescaped-entities": 0,
      "react/require-default-props": 0
    }
  }
}
