{
  "name": "hc.gg",
  "version": "0.1.0",
  "description": "Hamilton Chapman's website",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "yarn prettier --write",
    "lint": "eslint --ignore-path=.gitignore . --fix",
    "now-build": "next build",
    "prettier": "prettier 'pages/**/*.js' 'components/**/*.js' 'server.js'",
    "start": "next start"
  },
  "author": "Hamilton Chapman",
  "license": "ISC",
  "dependencies": {
    "@emotion/core": "^10.0.5",
    "@emotion/styled": "^10.0.5",
    "@emotion/styled-base": "^10.0.5",
    "emotion": "^10.0.5",
    "emotion-server": "^10.0.5",
    "emotion-theming": "^10.0.5",
    "highlight.js": "^9.13.1",
    "next": "^11.1.0",
    "polished": "^2.3.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-syntax-highlighter": "^10.1.0",
    "styled-system": "^3.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-emotion": "^10.0.5",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "^7.12.0",
    "prettier": "^1.15.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "rules": {
      "max-len": 0,
      "arrow-body-style": 0,
      "arrow-parens": [
        2,
        "as-needed"
      ],
      "comma-dangle": [
        2,
        "only-multiline"
      ],
      "consistent-return": 0,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": [
        2,
        {
          "devDependencies": true
        }
      ],
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "react",
            "styled-components"
          ]
        }
      ],
      "jsx-a11y/no-static-element-interactions": 0,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "no-confusing-arrow": 0,
      "no-mixed-operators": [
        1,
        {
          "allowSamePrecedence": true
        }
      ],
      "no-return-assign": 0,
      "no-unused-expressions": 0,
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "react/jsx-wrap-multilines": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            "js"
          ]
        }
      ],
      "react/no-array-index-key": 1,
      "react/no-did-mount-set-state": 0,
      "space-before-function-paren": [
        2,
        "never"
      ],
      "react/no-unescaped-entities": 0,
      "react/require-default-props": 0
    }
  }
}
